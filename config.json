{
    "name": "Mnist_LeNet",
    "nprocs": 8,
    "csv": "train.csv",

    "arch": {
        "type": "MnistModel",
        "args": {}
    },
    "dataset": {
        "type": "MnistDataLoader",
        "args":{
            "data_dir": "data/",
            "image_size": 448
        }
    },
    "data_loader": {
        "batch_size": 128,
        "shuffle": true,
        "num_workers": 2,
        "pin_memory": true,
        "drop_last": true
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
