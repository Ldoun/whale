{
    "name": "RN50.json",
    "nprocs": 8,
    "csv": "eda/image_combination.csv",

    "arch": {
        "type": "ClipImageEncoer",
        "args": {
            "embed_dim": 1024,
            "image_resolution": 448,
            "vision_layers": [
                3,
                4,
                6,
                3
            ],
            "vision_width": 64,
            "vision_patch_size": null
        }
    },
    "dataset": {
        "type": "ImageDataset",
        "args":{
            "data_dir": "../train_data",
            "image_size": 448
        }
    },
    "data_loader": {
        "batch_size": 128,
        "shuffle": true,
        "num_workers": 2,
        "pin_memory": true,
        "drop_last": true
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_Loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "log_step": null,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
